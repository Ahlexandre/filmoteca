{# film.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Détails du Film</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <main class="container my-5">
        <h1 class="text-center mb-4">Détails du Film</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ film.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ film.title }}</td>
                </tr>
                <tr>
                    <th>Année</th>
                    <td>{{ film.year }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ film.type }}</td>
                </tr>
                <tr>
                    <th>Synopsis</th>
                    <td>{{ film.synopsis }}</td>
                </tr>
                <tr>
                    <th>Réalisateur</th>
                    <td>{{ film.director }}</td>
                </tr>
                <tr>
                    <th>Supprimé à</th>
                    <td>
                        {% if film.deletedAt is not null %}
                            {{ film.deletedAt | date('Y-m-d H:i:s') }}
                        {% else %}
                            Non supprimé
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ film.createdAt | date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Mis à jour le</th>
                    <td>
                        {% if film.updatedAt %}
                            {{ film.updatedAt | date('Y-m-d H:i:s') }}
                        {% else %}
                            null
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="/films/list" class="btn btn-primary mt-3">Retour à la liste des films</a>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

